@page "{eventTypeId}/{eventId}"
@model EventGradingSystem.Pages.ParticipantNotesModel

@{
    ViewData["Title"] = "Комментарии участников";
    ViewData["AllowNavigation"] = true;
}

<table>

    <caption>Комментарии участников к мероприятию "@Model.Event.EventName" категории "@Model.Event.EventTypeName"</caption>

    <tr>
        <th>#</th>
        <th>Комментарий</th>
    </tr>

    @foreach (var item in Model.Notes)
    {
        <tr>
            <td>@item.Identifier</td>
            <td>@item.Content</td>
        </tr>
    }

</table>
